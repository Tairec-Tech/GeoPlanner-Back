# ========================================
# CONFIGURACIÓN DE BASE DE DATOS
# ========================================
# URL de conexión a PostgreSQL
DATABASE_URL=postgresql://usuario:contraseña@localhost:5432/geoplanner

# ========================================
# CONFIGURACIÓN DE AUTENTICACIÓN JWT
# ========================================
# Clave secreta para firmar tokens JWT (¡CAMBIA ESTA CLAVE EN PRODUCCIÓN!)
SECRET_KEY=tu_clave_secreta_muy_larga_y_segura_aqui_cambiala_por_una_real
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ========================================
# CONFIGURACIÓN DEL SERVIDOR
# ========================================
# Host donde se ejecutará el servidor
HOST=0.0.0.0
# Puerto donde se ejecutará el servidor
PORT=8000
# Modo debug (True para desarrollo, False para producción)
DEBUG=True

# ========================================
# CONFIGURACIÓN CORS
# ========================================
# Orígenes permitidos para CORS (separados por comas)
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# ========================================
# CONFIGURACIÓN DE GEOCODIFICACIÓN
# ========================================
# URL del servicio de geocodificación OpenStreetMap
NOMINATIM_URL=https://nominatim.openstreetmap.org

# ========================================
# CONFIGURACIÓN DE CLOUDINARY (OPCIONAL)
# ========================================
# Para subida de imágenes (opcional)
CLOUDINARY_CLOUD_NAME=tu_cloud_name
CLOUDINARY_API_KEY=tu_api_key
CLOUDINARY_API_SECRET=tu_api_secret

# ========================================
# CONFIGURACIÓN DE ENVÍO DE EMAILS (OPCIONAL)
# ========================================
# Para verificación de email (opcional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=tu_email@gmail.com
SMTP_PASSWORD=tu_password_de_aplicacion
